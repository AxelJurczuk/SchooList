<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".attendance.GroupsFragment"
    android:padding="16dp">
    <TextView
        android:id="@+id/tv_choose_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Choose a group"
        android:padding="16dp"/>
    <Button
        android:id="@+id/btn_first_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_choose_group"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Year 1"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_second_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_first_year"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Year 2"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_third_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_second_year"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Year 3"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_fourth_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_third_year"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Year 4"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_fifth_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_fourth_year"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Year 5"
        android:textAllCaps="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>